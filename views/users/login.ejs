<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <body>
            <h2>login and Rock</h2><br><br>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
            <input name="username" id="username" placeholder="enter username here" type="text" class="form-control" required/>
            </div><br>
            <div class="mb-3"> 
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" placeholder="enter your password here" type="password" class="form-control" required/>
            </div><br>
            <button class="btn btn-dark">login</button>
            <br>
        </form>
        </body>
    </div></div>